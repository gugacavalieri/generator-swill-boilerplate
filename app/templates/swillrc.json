{
  "basePaths": {
    "src": "<%= folder.src %>",
    "dist": "<%= folder.dist %>",
    "build": "<%= folder.build %>",
    "images": "<%= folder.images %>",
    "fonts": "<%= folder.fonts %>",
    "scripts": "<%= folder.scripts %>",
    "styles": "<%= folder.styles %>"
  },

  "validateW3C": <%= use.validateHTML %>,

  "lintCSS": <%= use.lint.css %>,

  "lintJS": <%= use.lint.js %>,<% if (use.inlineSVG) { %>

  "inlineSVG": true,<% } %>

  "svgPrefixClass": ".icon-",

  "autoprefixerBrowsers": [
    "ie > 7",
    "ie_mob > 9",
    "Firefox > 24",
    "last 10 Chrome versions",
    "safari > 5",
    "opera > 24",
    "ios > 5",
    "android > 4",
    "bb > 10"
  ],

  "browserSync": {
    "notify": false,
    "logPrefix": "BrowserSync",
    "server": {
      "baseDir": ["<%= folder.dist %>/", "./"]
    },
    "routes": {
        "/bower_components": "bower_components",
        "/node_modules": "node_modules"
    }
  },

  "browserSyncBuild": {
    "notify": false,
    "logPrefix": "BrowserSync",
    "server": {
      "baseDir": ["<%= folder.build %>/"]
    }
  }
}
