{
  "basePaths": {
    "src": "<%= folder.src %>",
    "dest": "<%= folder.dest %>",
    "build": "<%= folder.build %>",

    "handlebars": {
       "src": "<%= folder.handlebars %>",
       "partials": {
          "src": "includes"
        }
    },

    "images": {
      "src": "<%= folder.images.src %>"
    },

    "fonts": {
      "src": "<%= folder.fonts %>"
    },

    "scripts": {
      "src": "<%= folder.scripts.src %>"
    },

    "styles": {
      "src": "<%= folder.styles.src %>"
    },

    "clean": {
      "ignore": [
        "!<%= folder.dest %>/<%= folder.images.dest %>/{copyright,logos}{,**/*{,**/*}}"
      ]
    }
  },

  "validateW3C": <%= use.validateHTML %>,

  "lintCSS": <%= use.lint.css %>,

  "lintJS": <%= use.lint.js %>,<% if (use.inlineSVG) { %>

  "inlineSVG": true,<% } %>

  "svgPrefixClass": ".icon-",

  "autoprefixerBrowsers": [
    "ie > 7",
    "ie_mob > 9",
    "Firefox > 24",
    "last 10 Chrome versions",
    "safari > 5",
    "opera > 24",
    "ios > 5",
    "android > 4",
    "bb > 10"
  ],

  "browserSync": {
    "notify": false,
    "logPrefix": "BrowserSync",
    "server": {
      "baseDir": ["<%= folder.dest %>/", "./"]
    },
    "routes": {
        "/bower_components": "bower_components",
        "/node_modules": "node_modules"
    }
  },

  "browserSyncBuild": {
    "notify": false,
    "logPrefix": "BrowserSync",
    "server": {
      "baseDir": ["<%= folder.build %>/"]
    }
  }
}
